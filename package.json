{
  "name": "css-text-portrait-builder",
  "version": "1.2.0",
  "description": "A popular pure CSS text portrait builder for your loved ones.",
  "source": "src/index.html",
  "scripts": {
    "clean:output": "rimraf dist",
    "format:checkonly": "prettier . -c",
    "format": "prettier . -w",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check": "yarn run lint && yarn run format:checkonly",
    "stylefix": "yarn run format && yarn run lint:fix",
    "dev": "yarn run clean:output && parcel src/index.html",
    "build": "yarn run clean:output && parcel build src/index.html",
    "serve": "parcel serve src/index.html",
    "serve:https": "parcel serve src/index.html --https"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WarenGonzaga/css-text-portrait-builder.git"
  },
  "keywords": [
    "css",
    "text",
    "portrait",
    "builder"
  ],
  "author": "Waren Gonzaga",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/WarenGonzaga/css-text-portrait-builder/issues"
  },
  "homepage": "https://github.com/WarenGonzaga/css-text-portrait-builder#readme",
  "dependencies": {
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "@parcel/transformer-sass": "^2.0.1",
    "eslint": "^8.3.0",
    "eslint-config-google": "^0.14.0",
    "parcel": "^2.0.1",
    "prettier": "^2.5.0",
    "rimraf": "^3.0.2"
  },
  "packageManager": "yarn@3.1.0"
}
